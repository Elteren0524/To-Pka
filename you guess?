<body>
  <div class="wrap">
    <div class="card" id="card">
      <canvas id="confetti"></canvas>
      <div class="hud"></div>

      <div class="content" id="content">
        <h1 id="title">Pka, will you be my Girlfriend?</h1>
        <p id="hint" class="hint">Choose wisely...</p>

        <div id="playground" class="playground">
          <button id="yes" class="btn yes" type="button">Yes</button>
          <button id="no" class="btn no" type="button">No</button>
          <div id="bubble" class="bubble" aria-hidden="true"></div>
        </div>

        <div id="resultWrap" class="resultWrap">
          <div id="result" class="resultText">YAYYYY!!</div>
          <div id="sub" class="subText">I knew you'd say yes ðŸ’–</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const card = document.getElementById("card");
    const playground = document.getElementById("playground");
    const yes = document.getElementById("yes");
    const no = document.getElementById("no");
    const hint = document.getElementById("hint");
    const resultWrap = document.getElementById("resultWrap");
    const bubble = document.getElementById("bubble");

    const GAP = 70;

    function clamp(v, min, max) { return Math.max(min, Math.min(max, v)); }

    function setInitialPositions() {
      const w = playground.clientWidth;
      const h = playground.clientHeight;
      const btnW = yes.offsetWidth;
      const btnH = yes.offsetHeight;

      const centerX = w / 2;
      const y = (h / 2) - (btnH / 2);

      const yesX = centerX - (GAP / 2) - btnW;
      const noX  = centerX + (GAP / 2);

      yes.style.left = `${clamp(yesX, 12, w - btnW - 12)}px`;
      yes.style.top  = `${clamp(y,    12, h - btnH - 12)}px`;

      no.style.left  = `${clamp(noX,  12, w - btnW - 12)}px`;
      no.style.top   = `${clamp(y,    12, h - btnH - 12)}px`;
    }

    window.addEventListener("load", () => requestAnimationFrame(setInitialPositions));
    window.addEventListener("resize", () => {
      setInitialPositions();
      resizeCanvas();
    });

    function rectsOverlap(a, b) {
      return !(
        a.right  <= b.left  ||
        a.left   >= b.right ||
        a.bottom <= b.top   ||
        a.top    >= b.bottom
      );
    }

    const bubbleTexts = ["hehe","nice try","not happening","nope","try again","almostâ€¦","no way"];
    let bubbleTimer = null;

    function showBubbleNearNo() {
      const msg = bubbleTexts[Math.floor(Math.random() * bubbleTexts.length)];
      bubble.textContent = msg;

      const pgW = playground.clientWidth;
      const pgH = playground.clientHeight;

      const noLeft = parseFloat(no.style.left || "0");
      const noTop  = parseFloat(no.style.top  || "0");

      // stick close to No (above-left)
      let bx = noLeft - 10;
      let by = noTop  - 34;

      bubble.classList.add("show");
      const bw = bubble.offsetWidth;
      const bh = bubble.offsetHeight;

      bx = clamp(bx, 8, pgW - bw - 8);
      by = clamp(by, 8, pgH - bh - 8);

      bubble.style.left = `${bx}px`;
      bubble.style.top  = `${by}px`;

      if (bubbleTimer) clearTimeout(bubbleTimer);
      bubbleTimer = setTimeout(() => bubble.classList.remove("show"), 650);
    }

    function moveNo() {
      const pad = 14;
      const safe = 20;

      const w = playground.clientWidth;
      const h = playground.clientHeight;
      const btnW = no.offsetWidth;
      const btnH = no.offsetHeight;

      const yesRectAbs = yes.getBoundingClientRect();
      const pgRectAbs = playground.getBoundingClientRect();

      const yesRect = {
        left:   (yesRectAbs.left - pgRectAbs.left) - safe,
        top:    (yesRectAbs.top  - pgRectAbs.top)  - safe,
        right:  (yesRectAbs.right- pgRectAbs.left) + safe,
        bottom: (yesRectAbs.bottom- pgRectAbs.top) + safe
      };

      const minX = pad;
      const maxX = w - btnW - pad;
      const minY = pad;
      const maxY = h - btnH - pad;

      let x = minX, y = minY;
      let tries = 0;

      while (tries < 120) {
        x = minX + Math.random() * Math.max(0, maxX - minX);
        y = minY + Math.random() * Math.max(0, maxY - minY);

        const noRect = { left:x, top:y, right:x+btnW, bottom:y+btnH };
        if (!rectsOverlap(noRect, yesRect)) break;
        tries++;
      }

      no.style.transition = "left 140ms ease-out, top 140ms ease-out";
      no.style.left = `${x}px`;
      no.style.top  = `${y}px`;

      showBubbleNearNo();
    }

    no.addEventListener("mouseenter", moveNo);
    no.addEventListener("click", moveNo);

    yes.addEventListener("click", () => {
      hint.style.display = "none";
      playground.style.display = "none";
      resultWrap.style.display = "block";
      startConfetti();
    });

    /* confetti on the card */
    const canvas = document.getElementById("confetti");
    const ctx = canvas.getContext("2d");
    let pieces = [];
    let raf = null;

    function resizeCanvas() {
      canvas.width = card.clientWidth;
      canvas.height = card.clientHeight;
    }
    resizeCanvas();

    function startConfetti() {
      if (raf) cancelAnimationFrame(raf);
      resizeCanvas();

      pieces = [];
      const W = canvas.width;
      const H = canvas.height;

      for (let i = 0; i < 220; i++) {
        pieces.push({
          x: Math.random() * W,
          y: -Math.random() * (H * 0.8),
          size: Math.random() * 7 + 4,
          speed: Math.random() * 3.5 + 2,
          drift: Math.random() * 1.8 - 0.9,
          color: `hsl(${Math.random() * 360}, 100%, 60%)`
        });
      }
      animate();
    }

    function animate() {
      const W = canvas.width;
      const H = canvas.height;

      ctx.clearRect(0, 0, W, H);

      for (const p of pieces) {
        p.y += p.speed;
        p.x += p.drift;

        if (p.x < -20) p.x = W + 20;
        if (p.x > W + 20) p.x = -20;

        ctx.fillStyle = p.color;
        ctx.fillRect(p.x, p.y, p.size, p.size);
      }

      pieces = pieces.filter(p => p.y < H + 40);

      if (pieces.length) raf = requestAnimationFrame(animate);
      else ctx.clearRect(0, 0, W, H);
    }
  </script>
</body>
</html>
